{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "gopls": {
      "command": ["gopls", "-rpc.trace", "--debug=:6060", "serve"]
    }
  },
  "plugin": ["opencode-gemini-auth@latest"],
  "permission": {
    "*": "ask",
    "glob": "allow",
    "grep": "allow",
    "read": "allow",
    "todowrite": "allow"
  },
  "provider": {
    "lm-studio-local": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio local",
      "options": {
        "baseURL": "http://localhost:1234/v1",
        "apiKey": "lm-studio"
      },
      "models": {
        "qwen2.5-coder-7b-instruct": {
          "name": "qwen2.5-coder-7b-instruct"
        },
        "deepseek/deepseek-r1-0528-qwen3-8b": {
          "name": "deepseek-r1-0528-qwen3-8b"
        },
        "openai/gpt-oss-20b": {
          "name": "gpt-oss-20b"
        }
      }
    },
    "ollama-tablet": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "ollama tablet",
      "options": {
        "baseURL": "http://192.168.1.224:11434/v1"
      },
      "models": {
        "qwen3": {
          "name": "qwen3",
          "limit": {
            "context": 32768,
            "output": 8192
          }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  }
}
